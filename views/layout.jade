!!! 5
html
  include inc/header

  body
    div.navbar.navbar-fixed-top
      div.navbar-inner
        div.container
          a(href='/').brand #{settings.site_name}
          - if (req.isAuthenticated())
            ul.nav
              li
                a(href='/jobs/add') Add Job
              li
                a(href='/users/add') Add User
          ul.nav.pull-right
            - if (req.isAuthenticated())
              li
                a(href='/users/') Users
              li
                a(href='/settings') Settings
              li
                a(href=req.user.editLink()) My Account
              li
                a(href='/logout') Log out
            - else
              li
                a(href='/login?backto=' + encodeURIComponent(req.path)) Log in

    div.container
      .row-fluid
        .span12
          block content
      include inc/footer

    != js('//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js')
    != js('//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js')
    != js('app')
